<h1> New Question </h1>

<div class="row">
    <div class="col-md-4">
      <p> Guidelines for questions </p>
      <ul>
        <li> Be clear. </li>
        <li> Do a search before asking. </li>
      </ul>
    </div>

    <div class="col-md-8">
      <%= form_for @question do |x| %>
        <div class="form-group">
          <%= x.label :title %>
          <%= x.text_field :title, class: 'form-control', placeholder: "Enter question title" %>
        </div>

        <div class="form-group">
          <%= x.label :body %>
          <%= x.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter question body" %>
        </div>

        <div class="form-group">
          <%= x.label :resolved %>
          <%= x.check_box :resolved %>
        </div>
        <div class="form-group">
          <%= x.submit "Save", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
